# Azure DMS Deployment - Environment Configuration Template
# 
# Copy this file to .env and fill in your values
# NOTE: NEVER commit .env to version control
# This file is for local development only

################################################################################
# Azure Configuration
################################################################################

# Azure Subscription ID
# Get with: az account list --query "[].id" -o tsv
AZURE_SUBSCRIPTION_ID=

# Azure Tenant ID  
# Get with: az account show --query "tenantId" -o tsv
AZURE_TENANT_ID=

# Azure Region - options: eastus, westus, westeurope, eastasia, etc
AZURE_LOCATION=eastus

################################################################################
# Deployment Environment
################################################################################

# Environment name: dev, staging, prod
DEPLOYMENT_ENVIRONMENT=dev

# Project name (used in resource naming)
PROJECT_NAME=dms

################################################################################
# Docker Configuration
################################################################################

# Docker registry username (if pushing to Docker Hub)
DOCKER_USERNAME=

# Docker registry password (if pushing to Docker Hub)
DOCKER_PASSWORD=

# Build images locally before deployment (true/false)
BUILD_DOCKER_IMAGES=true

################################################################################
# PostgreSQL Configuration
################################################################################

# PostgreSQL admin username
PSQL_ADMIN_USER=dmsadmin

# PostgreSQL admin password (auto-generated if empty)
PSQL_ADMIN_PASSWORD=

# PostgreSQL database name
PSQL_DB_NAME=dms_db

# PostgreSQL database size in GB (default: 32)
PSQL_STORAGE_SIZE=32

# PostgreSQL SKU: Standard_B1ms, Standard_B2s, Standard_D2s_v3, etc
PSQL_SKU=Standard_B1ms

################################################################################
# Application Configuration
################################################################################

# Backend API base URL (used by frontend)
API_BASE_URL=

# Frontend domain (used in App Service configuration)
FRONTEND_DOMAIN=

# Spring Boot profiles to activate (dev, staging, prod)
SPRING_PROFILES_ACTIVE=

# Logging level: DEBUG, INFO, WARN, ERROR
LOGGING_LEVEL=INFO

################################################################################
# App Service Configuration
################################################################################

# App Service Plan SKU: B1, B2, B3, P1V2, P2V2, etc
APP_SERVICE_SKU=B2

# Number of App Service instances
APP_SERVICE_INSTANCES=1

# Enable auto-scaling (true/false)
APP_SERVICE_AUTOSCALE=false

# Minimum instances (for autoscaling)
APP_SERVICE_MIN_INSTANCES=1

# Maximum instances (for autoscaling)
APP_SERVICE_MAX_INSTANCES=5

################################################################################
# Monitoring & Logging
################################################################################

# Enable Application Insights (true/false)
ENABLE_APP_INSIGHTS=true

# Alert email for critical errors
ALERT_EMAIL=

# Log retention days (7-2555)
LOG_RETENTION_DAYS=30

################################################################################
# Backup & Disaster Recovery
################################################################################

# PostgreSQL backup retention days
BACKUP_RETENTION_DAYS=7

# Enable geo-redundant backups (true/false)  
GEO_REDUNDANT_BACKUP=false

# RTO (Recovery Time Objective) in minutes for production
RTO_MINUTES=60

# RPO (Recovery Point Objective) in minutes for production
RPO_MINUTES=60

################################################################################
# Security Configuration
################################################################################

# Enable Key Vault encryption at rest (true/false)
ENABLE_KEY_VAULT=true

# Enable managed identities (true/false)
USE_MANAGED_IDENTITIES=true

# Enable network security groups (true/false)
ENABLE_NSG=false

# Enable WAF (Web Application Firewall) - prod only
ENABLE_WAF=false

# Enable DDoS protection - prod only
ENABLE_DDOS_PROTECTION=false

################################################################################
# Cost Control
################################################################################

# Auto-shutdown for non-prod environments (true/false)
ENABLE_AUTO_SHUTDOWN=false

# Auto-shutdown time (HH:MM format, 24-hour)
AUTO_SHUTDOWN_TIME=18:00

# Enable spot instances for non-prod (true/false)
USE_SPOT_INSTANCES=false

################################################################################
# CI/CD Configuration
################################################################################

# GitHub repository owner
GITHUB_REPO_OWNER=

# GitHub repository name
GITHUB_REPO_NAME=

# GitHub branch for dev deployments (default: develop)
DEV_BRANCH=develop

# GitHub branch for prod deployments (default: main)
PROD_BRANCH=main

################################################################################
# Additional Tags for Azure Resources
################################################################################

# Cost center for billing
TAG_COST_CENTER=

# Project code
TAG_PROJECT_CODE=

# Environment tag (inherited from DEPLOYMENT_ENVIRONMENT)
TAG_ENVIRONMENT=${DEPLOYMENT_ENVIRONMENT}

# Team name
TAG_TEAM=

# Owner email
TAG_OWNER_EMAIL=
